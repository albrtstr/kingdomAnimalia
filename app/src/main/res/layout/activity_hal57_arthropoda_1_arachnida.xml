<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/background">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:layout_width="211dp"
            android:layout_height="65dp"
            android:background="@drawable/title_arachnida"
            android:contentDescription="@string/content_filum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln4"
        android:layout_below="@id/ln3"
        android:orientation="vertical"

        android:padding="10dp"
        android:layout_centerHorizontal="true">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/content_arthropoda_1_archnida_bg1"
            android:contentDescription="@string/title_filum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln5"
        android:padding="10dp"
        android:layout_below="@id/ln4"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/content_arthropoda_1_archinida_bg2"
            android:contentDescription="@string/content_filum" />
    </LinearLayout>
</RelativeLayout>