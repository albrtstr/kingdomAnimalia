        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <ImageView
            android:layout_width="211dp"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/title_myriapoda"
            android:contentDescription="@string/content_filum" />

        <ImageView
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/content_arthropoda_2_myriapoda_bg2"
            android:contentDescription="@string/content_filum" />

        <ImageView
            android:layout_width="366dp"
            android:layout_height="292dp"
            android:background="@drawable/content_arthropoda_2_myriapoda_bg3"
            android:contentDescription="@string/content_filum" />
    </LinearLayout>
</RelativeLayout>