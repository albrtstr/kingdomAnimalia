        android:layout_marginEnd="305dp"
        android:scaleX="1.3"
        android:scaleY="1.3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/asset_dug_horizontal"
            android:contentDescription="@string/content_filum"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln1"
        android:layout_alignParentEnd="true"
