<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln1"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/petunjuk"
            android:fontFamily="@font/spacemono_regular"
            android:textColor="@color/white"
            android:textSize="36sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln2"
        android:layout_below="@id/ln1"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_home"
                android:contentDescription="@string/icon_petunjuk"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background=" #D5F5F6"
                android:src="@drawable/button_petunjuk7"
                android:contentDescription="@string/icon_petunjuk">
            </ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_gravity="center"
                android:foregroundGravity="center_horizontal"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_menu"
                android:contentDescription="@string/icon_petunjuk"></ImageView>
            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="#D5F5F6"
                android:textColor="#073F55"
                android:textAlignment="center"

                android:fontFamily="@font/spacemono_regular"
                android:text="Kembali ke Menu Jelajah Filum"
                android:contentDescription="@string/icon_petunjuk">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:src="@drawable/button_exit_new"

                android:contentDescription="@string/icon_petunjuk"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_petunjuk4"
                android:background=" #D5F5F6"
                android:contentDescription="@string/icon_petunjuk">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_help_new"
                android:contentDescription="@string/icon_petunjuk"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background=" #D5F5F6"
                android:src="@drawable/button_petunjuk5"
                android:contentDescription="@string/icon_petunjuk">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/spacemono_regular"
            android:textSize="14dp"
            android:padding="10dp"
            android:background="#D5F5F6"
            android:textColor="#073F55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ptnjuk"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln3"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ln2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/asset_6"
            android:contentDescription="@string/gambar"
            tools:ignore="RtlHardcoded"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:scaleX="1"
        android:scaleY="1">

        <ImageView
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_home"
            android:contentDescription="@string/icon_petunjuk"></ImageView>
    </LinearLayout>
</RelativeLayout>